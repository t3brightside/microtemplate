# CSS for Dark Mode
	page {
		headerData {
      # styles to set content colours from constants
			10565 = TEXT
			10565.value (
				<style>
          @media (prefers-color-scheme: dark) {
  					body {color: {$microtemplate.darkMode-text-default}; background-color: {$microtemplate.darkMode-body-background}}
            #header.scrolled, #header.force-bg {background-color: {$microtemplate.darkMode-header-bg}}

  				/* links and buttons */
  					#menu a {color: {$microtemplate.darkMode-text-default}}
  					#menu>nav>ul>li, #languagemenu>nav>ul {border-color: {$microtemplate.darkMode-text-default}}
  					.hmbrgr i {background: {$microtemplate.darkMode-text-default}}
  					a, a:visited, #menu a:hover, #menu .active a {color: {$microtemplate.darkMode-accentColor}}
  					.btn:visited, .btn, .closelink:hover i, a.hmbrgr:hover i {background-color: {$microtemplate.darkMode-accentColor}}
  					.btn:visited, .btn, .btn:disabled {border-color: {$microtemplate.darkMode-accentColor}}
  					.btn:hover, .btn:disabled {color: {$microtemplate.darkMode-accentColor}}

  				/* content sections */
  					.containerSection {background-color: {$microtemplate.darkMode-containerSection.bg-default}}
  					.containerSection.bg-light {background-color: {$microtemplate.darkMode-containerSection.bg-light}}
  					.containerSection.bg-dark {background-color: {$microtemplate.darkMode-containerSection.bg-dark}; color: {$microtemplate.darkMode-text-light}}
  					.containerSection.text-light {color: {$microtemplate.darkMode-text-light}}
  					.containerSection.text-dark {color: {$microtemplate.darkMode-text-dark}}
            .containerSection.text-dark input, .containerSection.text-dark select, .containerSection.text-dark textarea {border-color: {$microtemplate.darkMode-text-dark}}
  					.containerSection .videobuttons svg .a, .containerSection .videobuttons svg .st0, .containerSection .videobuttons svg rect {fill:{$microtemplate.darkMode-text-default}}
  					.containerSection.text-light .videobuttons  .a, .containerSection.text-light .videobuttons polygon.st0, .containerSection.text-light .videobuttons rect {fill:{$microtemplate.darkMode-text-light}}
  					.containerSection.text-dark .videobuttons  .a, .containerSection.text-dark .videobuttons polygon.st0, .containerSection.text-dark .videobuttons rect {fill:{$microtemplate.darkMode-text-dark}}

          /* accordion */
            .containerAccordion-title, .containerAccordion-title:visited {color: {$microtemplate.darkMode-text-default}}
            .containerAccordion-title:hover {color: {$microtemplate.darkMode-accentColor}}
            .containerAccordion-title::after, .containerAccordion-title::before {background-color: {$microtemplate.darkMode-text-default}}
            .containerAccordion-title:hover::after, .containerAccordion-title:hover::before {background-color: {$microtemplate.darkMode-accentColor}}

  				/* sub pages */
  					.subpage {color: {$microtemplate.darkMode-text-default}}
  					.subpage-body {background-color: {$microtemplate.darkMode-body-background}}
  					.closelink i {background: {$microtemplate.darkMode-text-default}}

  				/* language menu */
  					#languagemenu li a {color: {$microtemplate.darkMode-text-default}}

  				/* forms */
  					input, select, textarea {font-family: {$microtemplate.darkMode-main-font-family}; color: {$microtemplate.darkMode-text-default}; border-color: {$microtemplate.darkMode-text-default}; -webkit-text-fill-color: {$microtemplate.darkMode-text-default};}
            .containerSection.text-dark input, .containerSection.text-dark select, .containerSection.text-dark textarea {color: {$microtemplate.darkMode-text-dark}; border-color: {$microtemplate.darkMode-text-dark}; -webkit-text-fill-color: {$microtemplate.darkMode-text-dark};}
            .containerSection.text-light input, .containerSection.text-light select, .containerSection.text-light textarea {color: {$microtemplate.darkMode-text-light}; border-color: {$microtemplate.darkMode-text-light}; -webkit-text-fill-color: {$microtemplate.darkMode-text-light};}

            i.validation-icon svg path {fill: {$microtemplate.darkMode-text-default}}
            .containerSection.text-dark i.validation-icon svg path {fill: {$microtemplate.darkMode-text-dark}}
            .containerSection.text-light i.validation-icon svg path {fill: {$microtemplate.darkMode-text-light}}

  				/* ext:youtubevideo */
  					.youtubeVideo:hover .customplaybutton polygon {fill: {$microtemplate.darkMode-accentColor}}

  				/* ext:pagelist styles */
  					.pagelist .info, .pagelist .abstract {color: {$microtemplate.darkMode-text-default}}

  				/* pagination */
  					 ul.pagination>li>a {boreder-color: {$microtemplate.darkMode-accentColor}}
  					 ul.pagination>li.current {color: {$microtemplate.darkMode-text-default}}

  				/* ext:personnel */
  					.containerSection .personnel svg path {fill: {$microtemplate.darkMode-text-default}}
  					.containerSection.bg-dark .personnel svg path {fill: {$microtemplate.darkMode-text-light}}
  					.containerSection.text-light .personnel svg path {fill: {$microtemplate.darkMode-text-light}}
  					.containerSection.text-dark .personnel svg path {fill: {$microtemplate.darkMode-text-dark}}
          }
        </style>
			)
		}
	}

  ["{$microtemplate.nontransparent-header}" != "0"]
		page.headerData {
			10566 = TEXT
			10566.value (
				<style>
          @media (prefers-color-scheme: dark) {
					       #header {background-color: {$microtemplate.darkMode-header-bg}
          }
				</style>
			)
		}
	[END]
